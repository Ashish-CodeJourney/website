---
import Roadmap from "@/components/roadmap/roadmap";
import TopMargin from "@/components/ui/top-margin.astro";
import Layout from "@/layouts/layout.astro";
import {
  categorizeRoadmapsByQuarter,
  getRoadmapYear,
} from "@/utils/roadmap-helpers";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

type RoadmapType = CollectionEntry<"aeps">;

const title = `Akash Network Roadmap`;

export async function getStaticPaths() {
  const roadmaps = (await getCollection("aeps")).filter(
    (roadmap) => roadmap?.data?.created
  );
  const years = [...new Set(roadmaps.map(getRoadmapYear))].sort();

  return years.map((year) => {
    const yearRoadmaps = roadmaps.filter(
      (roadmap) => getRoadmapYear(roadmap) === year && roadmap?.data?.roadmap
    );

    const quarters = categorizeRoadmapsByQuarter(yearRoadmaps);

    return {
      params: { year },
      props: { quarters, years },
    };
  });
}

const { quarters, years } = Astro.props;
const { year } = Astro.params;
---

<Layout title={`${title} - ${year}`}>
  <TopMargin className="flex flex-col" isNotContainer>
    <Roadmap
      year={Number(year)}
      quarters={quarters}
      years={years}
      client:load
    />
  </TopMargin>
</Layout>
